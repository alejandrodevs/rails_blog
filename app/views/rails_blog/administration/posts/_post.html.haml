.administration
  .post-wrapper
    .row-fluid.post-wrapper-upper
      .span9
        %h3.post-title
          = link_to post.title, administration_post_path(post)
        %p.post-info
          = post.author.name
          = post.description
      .span3
        = gravatar_image_tag(post.author.email, :alt => post.author.name, :class => 'img-circle img-author', :gravatar => { :size => 60 })
