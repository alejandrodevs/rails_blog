= form_for [:administration, @user], as: :user do |f|
  .control-label
    = f.label :name
    .controls
      = f.text_field :name, :class => "input-xxlarge"

  .control-label
    = f.label :email
    .controls
      = f.email_field :email, :class => "input-xlarge"

  .control-label
    = f.label :password
    .controls
      = f.password_field :password, :class => "input-xlarge"

  .actions
    = f.submit 'Save user', :class => "btn btn-inverse btn-large"
