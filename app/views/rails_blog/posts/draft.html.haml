.post-wrapper
  - if @post.unpublished?
    .alert.alert-info
      = "Successfully. Now the post needs to be authorized by an admin user."
  .row-fluid.post-wrapper-upper
    .span9
      %h2.post-title
        = @post.title
      %p.post-info
        = @post.author.name
        = @post.description
    .span3
      = gravatar_image_tag(@post.author.email, :alt => @post.author.name, :class => 'img-circle img-author', :gravatar => { :size => 80 })
  .post-content
    = preserve RailsBlog::Markdown.render(@post.body).html_safe
  .actions
    - if @post.drafted?
      = link_to "Edit post", edit_post_path(@post), :class => "btn btn-inverse btn-large"
      = link_to "Publish post", post_unpublish_path, :class => "btn btn-inverse btn-large"
