= form_for @post do |f|
  .control-label
    = f.label :title
    .controls
      = f.text_field :title, :class => "input-xxlarge"

  .control-label
    = f.label :body
    .controls
      = f.text_area :body, :class => "input-xxlarge", rows: 15

  .actions
    = f.submit "Save post", :class => "btn btn-inverse btn-large"
