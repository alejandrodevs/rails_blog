.post-wrapper
  .row-fluid.post-wrapper-upper
    .span9
      %h2.post-title
        = link_to post.title, custom_post_path(*post.url_params)
      %p.post-info
        = link_to post.user.name, post.user
        = post.published_at_description
    .span3
      = gravatar_image_tag(post.user.email, :alt => post.user.name, :class => 'img-circle img-author', :gravatar => { :size => 80 })
  %p.post-content
    = post.body
