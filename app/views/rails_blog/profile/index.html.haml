.wrapper-profile
  %h3
    = @user.name
    %small profile

  = form_for @user, :url => profile_update_path, :method => :put do |f|
    .wrapper-user-photo
      = link_to gravatar_image_tag(current_user.email, :alt => 'Alejandro GutiÃ©rrez', :class => 'img-polaroid', :gravatar => { :size => 150 }), "http://www.gravatar.com", id: 'gravatar_link', target: "blank"

    .control-label
      = f.label :name
      .controls
        = f.text_field :name, :class => "input-xxlarge"

